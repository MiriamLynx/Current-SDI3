package com.sdi.rest;

import java.util.List;

import javax.ws.rs.Path;

import com.sdi.business.impl.classes.usuario.AddUser;
import com.sdi.business.impl.classes.usuario.FindAllActivated;
import com.sdi.business.impl.classes.usuario.FindAllDeactivated;
import com.sdi.business.impl.classes.usuario.FindByLogin;
import com.sdi.business.impl.classes.usuario.Update;
import com.sdi.model.Usuario;

@Path("/UsuarioServiceRs")
public interface UsuarioServiceRest {
	
	@GET
	@Path("{login}")
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	Usuario find(@PathParam("login")String login);

	@POST
	@Consumes({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	void updateProfile(Usuario user);

	@GET
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	List<Usuario> getAllActivated();

	@GET
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	List<Usuario> getAllDeactivated();

	@POST
	@Path("{user}")
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	void newProfile@PathParam("user")(Usuario user);

	@GET
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	public List<Alumno> getAlumnos();

	@GET
	@Path("{id}")
	@Produces({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	Alumno findById(@PathParam("id") Long id) throws EntityNotFoundException;

	@DELETE
	@Path("{id}")
	void deleteAlumno(@PathParam("id") Long id) throws EntityNotFoundException;

	@PUT
	@Consumes({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	void saveAlumno(Alumno alumno) throws EntityAlreadyExistsException;

	@POST
	@Consumes({ MediaType.APPLICATION_JSON, MediaType.APPLICATION_XML })
	void updateAlumno(Alumno alumno) throws EntityNotFoundException;

}
